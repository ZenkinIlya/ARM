<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.qs5501.demo.MainMenuActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/White"
            android:textSize="38sp"
            android:gravity="center"
            android:layout_marginEnd="20dp">
        </TextView>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_main_menu_sale"
                    android:layout_height="100dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_alignBottom="@id/btn_main_menu_sale"
                    android:layout_alignStart="@id/btn_main_menu_sale"
                    android:layout_alignEnd="@id/btn_main_menu_sale"
                    android:layout_alignTop="@id/btn_main_menu_sale"
                    android:clickable="false"
                    android:elevation="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:src="@drawable/ic_sale"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="Продажа"
                        android:textSize="25sp"
                        style="@style/Buttons"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_main_menu_return"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_alignBottom="@id/btn_main_menu_return"
                        android:layout_alignStart="@id/btn_main_menu_return"
                        android:layout_alignEnd="@id/btn_main_menu_return"
                        android:layout_alignTop="@id/btn_main_menu_return"
                        android:clickable="false"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_return"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Возврат"
                            android:textSize="20sp"
                            style="@style/Buttons"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_main_menu_reports"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_alignBottom="@id/btn_main_menu_reports"
                        android:layout_alignStart="@id/btn_main_menu_reports"
                        android:layout_alignEnd="@id/btn_main_menu_reports"
                        android:layout_alignTop="@id/btn_main_menu_reports"
                        android:clickable="false"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_reports"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Отчет"
                            android:textSize="20sp"
                            style="@style/Buttons"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_main_menu_payment"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_alignBottom="@id/btn_main_menu_payment"
                        android:layout_alignStart="@id/btn_main_menu_payment"
                        android:layout_alignEnd="@id/btn_main_menu_payment"
                        android:layout_alignTop="@id/btn_main_menu_payment"
                        android:clickable="false"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_payment_introduction"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Внесение/Выплата"
                            android:textSize="20sp"
                            style="@style/Buttons"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_main_menu_base"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_alignBottom="@id/btn_main_menu_base"
                        android:layout_alignStart="@id/btn_main_menu_base"
                        android:layout_alignEnd="@id/btn_main_menu_base"
                        android:layout_alignTop="@id/btn_main_menu_base"
                        android:clickable="false"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_storage"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Товары"
                            android:textSize="20sp"
                            style="@style/Buttons"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_main_menu_checks"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_alignBottom="@id/btn_main_menu_checks"
                        android:layout_alignStart="@id/btn_main_menu_checks"
                        android:layout_alignEnd="@id/btn_main_menu_checks"
                        android:layout_alignTop="@id/btn_main_menu_checks"
                        android:clickable="false"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_checks"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Чеки"
                            android:textSize="20sp"
                            style="@style/Buttons"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_main_menu_settings"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:layout_alignBottom="@id/btn_main_menu_settings"
                        android:layout_alignStart="@id/btn_main_menu_settings"
                        android:layout_alignEnd="@id/btn_main_menu_settings"
                        android:layout_alignTop="@id/btn_main_menu_settings"
                        android:clickable="false"
                        android:elevation="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_settings"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Настройки"
                            android:textSize="20sp"
                            style="@style/Buttons"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
