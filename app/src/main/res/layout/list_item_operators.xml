<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/operators_item">

    <ImageButton
        android:id="@+id/operators_btn_redact"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_redact"
        android:contentDescription="редактирование оператора"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/operators_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Зенкин И.Н."
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/operators_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Администратор"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/operators_btn_delete"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_delete"
        android:contentDescription="редактирование оператора"
        android:scaleType="fitCenter"/>

</LinearLayout>