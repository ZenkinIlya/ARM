<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qs5501.demo.settings.SettingsActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_test"
        style="@style/Toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тест"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:gravity="start"
            android:layout_marginEnd="20dp">
        </TextView>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/myGreen">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">

            <TextView
                android:id="@+id/test_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:background="@color/White">

        <TextView
            android:id="@+id/test_request_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </ScrollView>

        <Button
            android:id="@+id/btn_test_status_request"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Запрос состояния"
            android:textSize="25sp"
            style="@style/Buttons"/>
    </LinearLayout>

</LinearLayout>