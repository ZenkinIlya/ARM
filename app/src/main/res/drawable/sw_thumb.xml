<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/>
            <size android:width="60dp" android:height="30dp"/>
            <corners android:radius="40dp"/>
            <stroke android:width="2dp" android:color="@color/myRed"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:layout_width="match_parent" android:shape="rectangle">
            <solid android:color="#FFF" />
            <size android:width="60dp" android:height="30dp" />
            <corners android:radius="40dp" />
            <stroke android:width="2dp" android:color="@color/myGreen" />
        </shape>
    </item>
</selector>